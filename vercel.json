{
    "buildCommand": "npm run build",
    "outputDirectory": ".next",
    "env": {
        "NODE_ENV": "production"
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ],
    "redirects": [
        {
            "source": "/",
            "destination": "/admin",
            "permanent": false
        }
    ]
}